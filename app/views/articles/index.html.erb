<h1>Articles listing page</h1>
<table>
    <th>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
    </th>

    <tbody>
        <% @allarticles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article) %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %> </td>
                <td><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure that you want to delete?'}%></td> 
            </tr>
         <% end %>
    </tbody>
</table>

<br><br>
<button><%= link_to 'Create new article', new_article_path %></button>